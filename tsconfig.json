{
    "compilerOptions": {
        "rootDir": "./lib",
        "outDir": "./dist",
        "types": [
            "node",
            "mocha"
        ],
        "module": "CommonJS",
        "target": "ES5",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "moduleResolution": "node"
    },
    "files": [
        "lib/index.ts"
    ],
    "include": [
        "lib/**/*"
    ]
